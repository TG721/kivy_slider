<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        AsyncImage:
            id: async_image
            source: "https://www.wallpaperflare.com/static/926/320/911/the-witcher-3-wild-hunt-geralt-of-rivia-the-witcher-landscape-wallpaper.jpg"
            pos_hint: {"x": 0.3, "y":0.5}
            size_hint_x: 0.01
        Slider:
            id: slider
            orientation: "horizontal"
            min: 1
            max: 50
            step: 1
            on_value: root.on_slide(*args)